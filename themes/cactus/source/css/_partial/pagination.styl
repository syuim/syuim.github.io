.pagination
  display: inline-block
  margin-top: 2rem
  width: 100%
  text-align: center

  .page-number
    color: var(--color-text)
    font-size: .8rem

  a
    padding: 4px 6px
    border-radius: 5px
    // background-color: var(--color-accent-1)
    background-image: none
    color: var(--color-text)
    text-decoration: none

  a:hover
    background-image: none

  a:hover:not(.active)
    color: var(--color-accent-2)
